generator client {
  provider = "prisma-client"
  output = "../src/generated/prisma"
  moduleFormat = "cjs"
 
}

datasource db {
  provider = "postgresql"
}
enum MethodPayment {
  PIX
  DEBIT_CARD
  CREDIT_CARD
}
enum StatusPayment {
  PENDING
  RECUSED
  CONFIRMED
}
model COSTUMER { 
  id String @unique @default(uuid())
  name String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  @@map("costumer")

}
model PAYMENT {
  id String @unique @default(uuid())
  method MethodPayment
  status StatusPayment
  product_id String
  receipt_url String?
  
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  
  @@map("payment")
}
model PRODUCT { 
  id String @unique @default(uuid())
  description String
  avatar_icon String
  price Int
  available Boolean @default(true)
  category_id String
  category CATEGORY @relation(fields: [category_id],references: [id])
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  @@map("product")
}
model CATEGORY {
 id String @unique @default(uuid())
 name String
 product PRODUCT[]
 created_at DateTime @default(now())
 updated_at DateTime @default(now())
 @@map("category")

}